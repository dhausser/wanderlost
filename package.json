{
  "name": "wanderlost",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "lint": "eslint . --ext ts --ext tsx --ext js --fix",
    "test": "jest",
    "test:ci": "jest",
    "test-all": "yarn lint && yarn type-check && yarn test:ci",
    "check": "apollo client:check",
    "codegen": "apollo client:codegen --target typescript"
  },
  "dependencies": {
    "@apollo/client": "^3.2.5",
    "@nexus/schema": "^0.16.0",
    "@prisma/client": "^2.9.0",
    "@sendgrid/mail": "^7.3.0",
    "@stripe/react-stripe-js": "^1.1.2",
    "@stripe/stripe-js": "^1.10.0",
    "apollo-server-micro": "^2.18.2",
    "bcryptjs": "^2.4.3",
    "cookie": "^0.4.1",
    "date-fns": "^2.16.1",
    "downshift": "^6.0.6",
    "graphql": "^15.3.0",
    "graphql-iso-date": "^3.6.1",
    "jsonwebtoken": "^8.5.1",
    "lodash.debounce": "^4.0.8",
    "next": "^11.1.3",
    "nprogress": "^0.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hook-form": "^6.9.6",
    "react-transition-group": "^4.4.1",
    "stripe": "^8.117.0",
    "styled-components": "^5.2.0"
  },
  "devDependencies": {
    "@apollo/react-testing": "^4.0.0",
    "@prisma/cli": "^2.9.0",
    "@testing-library/dom": "^7.26.3",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie": "^0.4.0",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^14.14.2",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^16.9.53",
    "@types/react-transition-group": "^4.4.0",
    "@types/styled-components": "^5.1.4",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "apollo": "^2.30.3",
    "casual": "^1.6.2",
    "eslint": "^7.12.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-react": "^7.21.5",
    "husky": ">=4",
    "jest": "^26.6.1",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": ">=10.4.2",
    "prettier": "^2.1.2",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": "eslint --fix",
    "*.{js,ts,tsx}": "prettier --write"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/react",
      "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "react/react-in-jsx-scope": "off"
    }
  },
  "babel": {
    "presets": [
      "next/babel"
    ]
  },
  "eslintIgnore": [
    "**/node_modules/*",
    "**/out/*",
    "**/.next/*",
    "**/__generated__/*",
    "nexusTypes.ts"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "prettierIgnore": [
    "node_modules",
    ".next",
    "yarn.lock",
    "package-lock.json",
    "public"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dhausser/wanderlost.git"
  },
  "bugs": {
    "url": "https://github.com/dhausser/wanderlost/issues"
  },
  "homepage": "https://testing-react-app.netlify.app",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
